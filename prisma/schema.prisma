// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bot {
  id String @id

  persis_version          String  @default("1.0")
  persis_commands         Int     @default(0)
  persis_ranking          Float   @default(5)
  persis_alondioma        String?
  persis_last_interaction Int?
  persis_spam             Int     @default(0)
  persis_bufunfas         Float   @default(0)

  cmd_ativacoes Int @default(0)
  cmd_botoes    Int @default(0)
  cmd_menus     Int @default(0)
  cmd_erros     Int @default(0)

  exp_concedido Float @default(0)
  msgs_lidas    Int   @default(0)
  msgs_validas  Int   @default(0)

  bfu_gerado Int @default(0)
  bfu_movido Int @default(0)
  bfu_reback Int @default(0)
}

model Charada {
  qid      Int    @id @default(autoincrement())
  question String
  answer   String
}

model Game {
  name        String  @id
  description String?
  thumbnail   String?
  type        String  @default("game")
  link        String?
  price       Float   @default(0)
  expire      Int?
}

model Guild {
  id          String  @id
  lang        String  @default("pt-br")
  second_lang String?
  inviter     String?

  erase_valid     Boolean @default(false)
  erase_timeout   Float   @default(5)
  erase_timestamp String?

  games_channel String?
  games_role    String?

  tickets_category String?

  warn_notify             Boolean @default(true)
  warn_notify_exclusion   Boolean @default(true)
  warn_timed              Boolean @default(false)
  warn_channel            String?
  warn_timeout            Float   @default(2)
  warn_reset              Float   @default(7)
  warn_erase_ban_messages Float   @default(0)
  warn_timed_channel      String?
  warn_announce_status    Boolean @default(false)
  warn_announce_channel   String?
  warn_hierarchy_status   Boolean @default(false)
  warn_hierarchy_strikes  Int     @default(3)
  warn_hierarchy_timed    Boolean @default(false)
  warn_hierarchy_reset    Float   @default(4)
  warn_hierarchy_channel  String?

  reports_channel            String?
  reports_auto_ban           Boolean @default(false)
  reports_notify             Boolean @default(false)
  reports_role               String?
  reports_erase_ban_messages Float   @default(0)

  speaker_regional_limit Boolean @default(false)
  speaker_channels       String?

  logger_channel             String?
  logger_message_edit        Boolean @default(true)
  logger_message_delete      Boolean @default(true)
  logger_member_nick         Boolean @default(false)
  logger_member_image        Boolean @default(true)
  logger_member_role         Boolean @default(true)
  logger_member_join         Boolean @default(true)
  logger_member_left         Boolean @default(true)
  logger_channel_created     Boolean @default(false)
  logger_channel_delete      Boolean @default(false)
  logger_member_punishment   Boolean @default(true)
  logger_member_kick         Boolean @default(true)
  logger_member_ban_add      Boolean @default(true)
  logger_member_ban_remove   Boolean @default(true)
  logger_member_voice_status Boolean @default(false)
  logger_invite_created      Boolean @default(false)
  logger_invite_deleted      Boolean @default(false)

  death_note                   Boolean @default(false)
  death_note_notify            Boolean @default(true)
  death_note_channel           String?
  death_note_member_punishment Boolean @default(true)
  death_note_member_kick       Boolean @default(true)
  death_note_member_ban_add    Boolean @default(true)
  death_note_member_ban_remove Boolean @default(true)

  spam_notify           Boolean @default(true)
  spam_strikes          Boolean @default(true)
  spam_timeout          Float   @default(2)
  spam_manage_mods      Boolean @default(false)
  spam_trigger_amount   Float   @default(5)
  spam_suspicious_links Boolean @default(false)
  spam_channel          String?
  spam_scanner_links    Boolean @default(false)

  network_link               String?
  network_channel            String?
  network_member_punishment  Boolean @default(true)
  network_member_ban_add     Boolean @default(true)
  network_member_kick        Boolean @default(true)
  network_erase_ban_messages Float   @default(0)
  network_scanner_type       Boolean @default(true)

  timed_roles_timeout Float   @default(5)
  timed_roles_channel String?

  conf_games        Boolean @default(false)
  conf_tickets      Boolean @default(false)
  conf_reports      Boolean @default(false)
  conf_logger       Boolean @default(false)
  conf_spam         Boolean @default(false)
  conf_network      Boolean @default(false)
  conf_warn         Boolean @default(false)
  conf_nuke_invites Boolean @default(false)
  conf_timed_roles  Boolean @default(false)
}

model GuildRoleAssigner {
  id          Int     @id @default(autoincrement())
  guild_id    String
  interaction String?
  attribute   String?
  ignore      String?
  type        String  @default("global")
  status      Boolean @default(false)
}
